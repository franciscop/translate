{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    // "rootDir": "src",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "strict": false,
    "removeComments": true,
    "noImplicitAny": false,
    "typeRoots": ["node_modules/@types"]
  },
  "lib": ["es2015"],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "tmp"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
